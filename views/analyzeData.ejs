<html>
<meta charset="utf-8">

<head>
    <link rel="stylesheet" href="/stylesheets/analyzeData.css">
    <script src="/external/jquery/jquery.js"></script>
    <script src="/javascripts/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#draggableStates").sortable();
            $("#draggableStates").disableSelection();
            $("#draggableStates li").draggable();
            $( "#droppable" ).droppable({
                drop: function( event, ui ) {
                    console.log(event)
                    console.log(ui.draggable[0].innerText)
                    $( this )
                        .addClass( "ui-state-highlight" )
                        .find( "p" )
                        .html( ui.draggable[0].innerText );
                }
            });
        });
    </script>
</head>
<body>
<div class="header">
    <% include header %>
</div>

<div class="mainBody">
    <span class="stateTitle">States</span>
    <ul id="draggableStates">
        <%
        var options = states;
        for ( var i = 0; i < options.length; i++ )
        {
        %>
        <div class="stateNames ui-widget-content"> <%= options[i].state %></div>
        <%
        }
        %>
    </ul>

    <div id="droppable" class="ui-widget-header">
        <p>Drop here</p>
    </div>
</div>
<% include footer %>
</body>
</html>